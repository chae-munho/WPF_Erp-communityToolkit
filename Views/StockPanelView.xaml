<UserControl x:Class="WpfApp1.Views.StockPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="220" d:DesignWidth="400">

    <GroupBox Header="입고 / 출고">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding SelectedProductDisplay}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="수량(정수)"/>
                    <TextBox Width="140"
                             Text="{Binding StockQuantityText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="12,0,0,0">
                    <Button Content="입고"
                            Width="90" Height="32"
                            Margin="0,0,8,0"
                            Command="{Binding StockInCommand}"/>
                    <Button Content="출고"
                            Width="90" Height="32"
                            Command="{Binding StockOutCommand}"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       Foreground="DarkRed"/>
        </Grid>
    </GroupBox>
</UserControl>
